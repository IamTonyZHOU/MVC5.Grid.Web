@model IEnumerable<PersonModel>

@{
    ViewBag.Title = "Grid » Sorting";
}

<ul class="top-nav">
    <li>Grid »</li>
    <li>Sorting</li>
</ul>
<hr>

<div class="doc">
    <div id="getting-started" class="section">
        <h2>Description</h2>
        <p>
            Enables or disables grid sorting.
        </p>
        <h2>Remarks</h2>
        <p>Specifying grid sortability, will set all not yet configured grid column sortability options to specified one.</p>
        <h2>Examples</h2>
        <pre class="example-code"><a class="show-code">Show/Hide the code...</a>
<span class="code">
@@(
    Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.Name).Titled(<span class="str">"Name"</span>).Sortable(<span class="kwd">false</span>);
            columns.Add(model => model.Surname).Titled(<span class="str">"Surname"</span>).Sortable(<span class="kwd">false</span>);

            columns.Add(model => model.Age).Titled(<span class="str">"Age"</span>).Sortable(<span class="kwd">true</span>);
            columns.Add(model => model.Birthday).Titled(<span class="str">"Birth date"</span>);
            columns.Add(model => model.IsWorking).Titled(<span class="str">"Employed"</span>);
        })
        .Sortable()
)</span></pre>
    </div>
</div>

@(
 Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.Name).Titled("Name").Sortable(false);
            columns.Add(model => model.Surname).Titled("Surname").Sortable(false);

            columns.Add(model => model.Age).Titled("Age").Sortable(true);
            columns.Add(model => model.Birthday).Titled("Birth date");
            columns.Add(model => model.IsWorking).Titled("Employed");
        })
        .Sortable()
)
