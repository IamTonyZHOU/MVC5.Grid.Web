@model IEnumerable<PersonModel>

@{
    ViewBag.Title = "Grid » Row styling";
}

<ul class="top-nav">
    <li>Grid »</li>
    <li>Row styling</li>
</ul>
<hr>

<div class="doc">
    <div id="getting-started" class="section">
        <h2>Description</h2>
        <p>
            Sets row classes constraint, used for css or js.
        </p>
        <h2>Remarks</h2>
        <p>By default row css is null.</p>
        <p></p>
        <h2>Examples</h2>
        <pre class="example-code"><a class="show-code">Show/Hide the code...</a>
<span class="code">
@@(
    Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.Name).Titled(<span class="str">"Name"</span>);
            columns.Add(model => model.Surname).Titled(<span class="str">"Surname"</span>);

            columns.Add(model => model.Age).Titled(<span class="str">"Age"</span>);
            columns.Add(model => model.Birthday).Titled(<span class="str">"Birth date"</span>);
            columns.Add(model => model.IsWorking).Titled(<span class="str">"Employed"</span>);
        })
        .RowCss(model => model.IsWorking == <span class="kwd">true</span> ? <span class="str">"working"</span> : <span class="str">""</span>)
)

&lt;style&gt;
    .working {
        font-weight: bold;
    }
&lt;/style&gt;</span></pre>
    </div>
</div>

