@model IEnumerable<PersonModel>

@{
    ViewBag.Title = "Column » Encoded";
}

<ul class="top-nav">
    <li>Column »</li>
    <li>Encoded</li>
</ul>
<hr>

<div class="doc">
    <div id="getting-started" class="section">
        <h2>Description</h2>
        <p>
            Enables or disables html encoding for given column values.
        </p>
        <h2>Remarks</h2>
        <p>By default, column is encoded.</p>
        <h2>Examples</h2>
        <pre class="example-code"><a class="show-code">Show/Hide the code...</a>
<span class="code">
@@(
    Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.Name).Titled(<span class="str">"Name"</span>);
            columns.Add(model => model.Surname).Titled(<span class="str">"Surname"</span>);

            columns.Add(model => model.Age).Titled(<span class="str">"Encoded age"</span>).RenderedAs(model => <span class="str">"&lt;span&gt;"</span> + model.Age + <span class="str">"&lt;/span&gt;"</span>);
            columns.Add(model => model.Age).Titled(<span class="str">"Not encoded age"</span>).Encoded(<span class="kwd">false</span>).RenderedAs(model => <span class="str">"&lt;span style='color: red'&gt;"</span> + model.Age + <span class="str">"&lt;/span&gt;"</span>);
            columns.Add(model => model.Birthday).Titled(<span class="str">"Birth date"</span>);
            columns.Add(model => model.IsWorking).Titled(<span class="str">"Employed"</span>);
        })
)</span></pre>
    </div>
</div>

@(
 Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.Name).Titled("Name");
            columns.Add(model => model.Surname).Titled("Surname");

            columns.Add(model => model.Age).Titled("Encoded age").RenderedAs(model => "<span>" + model.Age + "</span>");
            columns.Add(model => model.Age).Titled("Not encoded age").Encoded(false).RenderedAs(model => "<span style='color: red'>" + model.Age + "</span>");
            columns.Add(model => model.Birthday).Titled("Birth date");
            columns.Add(model => model.IsWorking).Titled("Employed");
        })
)